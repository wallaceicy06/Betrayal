<style>
  body {
    background-image: url('http://darkcreationsatx.com/wp-content/uploads/2012/10/spooky-woods.jpg');
  }
  .hidden {
    display: none;
  }
  .invisible {
    visibility: hidden;
  }
  .center {
    margin-left: auto;
    margin-right: auto;
  }
  img {
      height: auto;
      width: auto;
  }
  img.full_heart {
    content:url("images/game/full_heart.png");
  }
  img.empty_heart {
    content:url("images/game/empty_heart.png");
  }
  img.small_lightning {
    content:url("images/game/small_lightning.png");
  }
  img.small_sword {
    content:url("images/game/small_sword.png");
  }
  img.small_jewel {
    content:url("images/game/small_jewel.png");
  }
  img.small_key {
    content:url("images/game/small_key.png");
  }
  .player-list-item {
    width: 140;
    padding: 3px;
    margin: 3px;
    opacity: 0.8;
    background-color: #F0F0F0;
  }
